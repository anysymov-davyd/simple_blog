<form action="/post" method="POST" class="p-3 mt-5 mx-auto" style="max-width: 768px;">
  <h1 class="text-black-50 text-center font-weight-bold mb-5">Make Your Post</h1>
  {{#if errors.length}}
    <ul class="alert alert-danger pl-5" role="alert" id="alert_msg">
      {{#each errors}}
        <li>{{this.msg}}</li>
      {{/each}}
    </ul>
  {{/if}}
  <div class="form-group">
    <input maxlength="40" autocomplete="off" type="text" class="form-control" id="title" name="title" placeholder="Enter a title" onchange="saveValue(this)">
  </div>
  <div class="form-group">
    <textarea maxlength="30000" style="resize:none" rows="8" type="text" class="form-control" id="content" name="content" placeholder="Start writing text..."></textarea>
  </div>
  <button id="submit" type="submit" class="btn btn-success w-100 mt-3">Submit</button>
</form>